doctype html
html(lang="en")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        p=error
        .topContainer
            .logoLeft
                img(id="logo_left", src="/images/logo.png", width="80%", height="100%", alt="Cartias Logo")
            .header
                h1 Caritas of Port Chester
            .logoRight
                img(id="logo_right", src="/images/logo.png", width="80%", height="100%", alt="Cartias Logo")

    body
        .home
            .guest
                form(action='/login', method='POST')
                    .guestLoginButton
                        input(type="hidden", name="type", value="guest")
                        button(type='submit', name="Guest Button") Guest Login
            form(action='/login', method='POST')
                .member
                    input(type="hidden", name="type", value="member")
                    .memberID
                        input(type = 'text', name = 'id', placeholder= '  Enter ID', class="idlogin")
                    .memberLoginButton
                        button(type='submit', name="Member Login") GO
            .newAccount
                form(action='/create', method='POST')
                    .newLoginButton
                        button(type='submit', name="New Account", class="guestLoginButton") Create New Account
        .language
            h1 Switch Language
