doctype html
html(lang="en")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        p=error
        .topContainer
            .logoLeft
                img(id="logo_left", src="/images/logo.png", width="80%", height="100%", alt="Cartias Logo")
            .header
                h1 Caritas of Port Chester
            .logoRight
                img(id="logo_right", src="/images/logo.png", width="80%", height="100%", alt="Cartias Logo")

    body
        .home
            .guest
                form(action='/login', method='post')
                    input(type="hidden", name="type", value="guest")
                    button(type='submit', name="Guest Button", class="guestLoginButton") Guest Login
            .member
                //label
                form(action='/login', method='POST')
                    input(type="hidden", name="type", value="member")
                    input(type = 'text', name = 'id', placeholder= '  Enter Member ID', class="idlogin")
                    button(type='submit', name="Member Login", class="memberLoginButton") Enter
            .language
                h1 Switch Language


