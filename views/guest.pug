doctype html
html(lang="en")
    head
        .welcome
            title= title
            link(rel='stylesheet', href='/stylesheets/style.css')
            h1(class="guestHeader") Guest Login

    body
        .guestScreen
            .mealStay
                .labelContainer
                    .titleLabel
                        p(class="pForAccess") Meals To Stay
                    .mmLabel
                        p(class="pForAccess") Today's Limit: #{max_meals_stay}
                .minusButton
                    //label(class="addSubtractLabel") Subtract Meal
                    button(type='button', onclick="if(document.getElementById('meals_now_stay').innerText>0){document.getElementById('meals_now_stay').innerText--;}") -
                .mealCounter
                    span(class = "mealNumber")#meals_now_stay 0
                .plusButton
                    //label(class="addSubtractLabel") Add Meal
                    button(type='button', onclick="if(document.getElementById('meals_now_stay').innerText< " + max_meals_stay + "){document.getElementById('meals_now_stay').innerText++;}") +
            .mealToGO
                .labelContainer
                    .titleLabel
                        p(class="pForAccess") Meals To Go
                    .mmLabel
                        p(class="pForAccess") Today's Limit: #{max_meals_go}
                .minusButton
                    button(type='button', onclick="if(document.getElementById('meals_now_go').innerText>0){document.getElementById('meals_now_go').innerText--;}") -
                .mealCounter
                    span(class = "mealNumber")#meals_now_go 0
                .plusButton
                    button(type='button', onclick="if(document.getElementById('meals_now_go').innerText< " + max_meals_go + "){document.getElementById('meals_now_go').innerText++;}") +
            .submitDiv
                form(action='/submit', method='POST', class='submitForm')
                    input(type="hidden", name="type", value="mealsSubmitted")
                    button(type='hidden', class="submitButton") Submit