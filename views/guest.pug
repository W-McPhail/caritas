    body
        .guestScreen
            .mealCounterWrapper
                .mealStay
                    .plusButton
                        button(type='button', onclick="if(document.getElementById('meals_now_stay').innerText< " + max_meals_stay + "){document.getElementById('meals_now_stay').innerText++;}", class = "plus") +
                    .mealCounter
                        span(class = "mealNumber")#meals_now_stay 0
